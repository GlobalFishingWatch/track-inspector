{
  "extends": ["config:base"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "updateTypes": ["patch"],
      "automerge": true
    },
    {
      "packagePatterns": ["^eslint"],
      "groupName": "eslint"
    },
    {
      "packagePatterns": ["^stylelint"],
      "groupName": "stylelint"
    },
    {
      "packagePatterns": ["^@types"],
      "groupName": "@types"
    },
    {
      "packagePatterns": ["^@globalfishingwatch"],
      "groupName": "globalfishingwatch"
    },
    {
      "packageNames": ["react", "react-dom"],
      "groupName": "react"
    },
    {
      "packageNames": ["react-redux", "@reduxjs/toolkit"],
      "groupName": "redux"
    }
  ],
  "labels": ["renovate"],
  "rangeStrategy": "pin",
  "bumpVersion": null,
  "semanticCommits": true,
  "unicodeEmoji": true,
  "schedule": ["after 3pm and before 6pm on friday"]
}
